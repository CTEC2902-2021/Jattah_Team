@model List<FootballClubApp.Models.ClubTeam>
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/realsite.css" rel="stylesheet" />
    <link href="~/Content/PFGeneral.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div id="top-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="home-account" style="float:right;">
                  
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div id="main-header" style="background-color: #1E88E5">
            <div class="container">
                <div class="row">
                    <div class="col-md-2">
                        <div class="logo">

                            <a href="#"><img height="100" width="100" src="~/Images/logo.png" title="English Premier League" alt="English Premier League"></a>
                        </div>
                    </div>
               
                </div>
            </div>
        </div>
    </header>
    <div class="page-wrapper">

        <div class="main">
            <div class="container">
                <div class="content">
                    <div class="col-sm-12 col-sm-offset-0">
                        <h2 class="page-header center">English Premier League Table 2020-21</h2>
                        <div class="box">
                            @if (@Session["Message"] != null)
                            {

                                if (!@Session["Message"].Equals(""))
                                {
                                    <div class="alert alert-success">
                                        @Session["Message"]
                                    </div>

                                }

                            }
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col"></th>
                                        <th scope="col">Club Name</th>
                                        <th scope="col">Team Ranking</th>
                                        <th scope="col">GP</th>
                                        <th scope="col">W</th>
                                        <th scope="col">L</th>
                                        <th scope="col">D</th>
                                        <th scope="col">F</th>
                                        <th scope="col">A</th>
                                        <th scope="col">Points</th>
                                        <th scope="col">Number Of Fans</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row">@item.ID</th>
                                                <td><img height="30" width="30" src="~/Images/@(item.ID+ ".PNG")" /></td>
                                                <td><a href="/Home/TeamDetails/@item.ID">@item.Name</a></td>
                                                <td>@item.Ranking</td>
                                                <td>@item.GamePlayed</td>
                                                <td>@item.Win</td>
                                                <td>@item.Lose</td>
                                                <td>@item.Draw</td>
                                                <td>@item.GoalsScore</td>
                                                <td>@item.GoalsAgainst</td>
                                                <td>@item.CurrentPoints</td>
                                                <td>@item.NumberOfFans</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div><!-- /.box -->
                    </div><!-- /.col-* -->
                </div><!-- /.content -->
            </div><!-- /.container -->


        </div><!-- /.main -->


        <div id="footer" class="footer">
            <div class="footer-top">
                <div class="container">
                    <div class="footer-top-inner">
                        <nav>
                            <ul class="nav nav-pills">
                            </ul>
                        </nav>
                    </div><!-- /.footer-top-inner -->
                </div><!-- /.container -->
            </div><!-- /.footer-top -->

            <div class="footer-bottom">
                <div class="container">
                    <div class="footer-bottom-inner">
                        <div class="footer-bottom-left">
                        </div><!-- /.footer-bottom-left -->

                        <div class="footer-bottom-right">
                        </div><!-- /.footer-bottom-right -->
                    </div><!-- /.footer-bottom-inner -->
                </div><!-- /.container -->
            </div><!-- /.footer-bottom -->
        </div><!-- /.footer -->

    </div><!-- /.page-wrapper-->

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>